<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp" android:gravity="center" android:visibility="visible"
            tools:visibility="visible">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@mipmap/ic_launcher_foregroundaustralia"
                android:id="@+id/imageView11"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvAustralia"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Opera House"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/cB1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:background="@android:color/transparent"
                    android:button="@android:drawable/btn_star"
                    android:clickable="false"
                    android:duplicateParentState="false"
                    android:focusable="false" />
            </LinearLayout>
            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#000000"
                android:visibility="visible" tools:visibility="@tools:sample/cities"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@mipmap/ic_launcher_foregroundcanada"
                android:id="@+id/imageView13"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvCanada"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ryerson University"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/cB2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:background="@android:color/transparent"
                    android:button="@android:drawable/btn_star"
                    android:clickable="false"
                    android:duplicateParentState="false"
                    android:focusable="false" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#000000"
                android:visibility="visible" tools:visibility="@tools:sample/cities"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@mipmap/ic_launcher_foregroundfrance"
                android:id="@+id/imageView14"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvFrance"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Eiffel Tower "
                    android:textSize="30sp" />
                <CheckBox
                    android:button="@android:drawable/btn_star"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/cB3"
                    android:clickable="false"
                    android:duplicateParentState="false"
                    android:focusable="false"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#000000"
                android:visibility="visible" tools:visibility="@tools:sample/cities"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@mipmap/ic_launcher_foregroundjapan"
                android:id="@+id/imageView17"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvJapan"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mount Fuji"
                    android:textSize="30sp" />

                <CheckBox
                    android:button="@android:drawable/btn_star"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/cB4"
                    android:clickable="false"
                    android:duplicateParentState="false"
                    android:focusable="false"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#000000"
                android:visibility="visible" tools:visibility="@tools:sample/cities"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@mipmap/ic_launcher_foregroundrussia"
                android:id="@+id/imageView18"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvRussia"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Red Square"
                    android:textSize="30sp" />

                <CheckBox
                    android:button="@android:drawable/btn_star"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/cB5"
                    android:clickable="false"
                    android:duplicateParentState="false"
                    android:focusable="false"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <Button
                android:id="@+id/bR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>